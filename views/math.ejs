<!DOCTYPE html>
<html lang="en">
  <%- include('common/head.ejs', {title}) %>
  <body class="d-flex flex-column align-items-center">
    <%- include('common/nav.ejs') %>
    <h1><%= title %></h1>

    <h2 class="my-3"><%= message %></h2>

    <form class="my-3  p-3 border rounded" action="/math" method="post">
      <div class="form-group">
        <label for="num1"
          >Enter First number:
          <input type="number" id="num1" name="num1" class="form-control" />
        </label>
      </div>
      <div class="form-group">
        <select class="form-control" id="op" name="op">
          <option>plus</option>
          <option>minus</option>
          <option>times</option>
          <option>dividedby</option>
          <option>tothepowerof</option>
        </select>
      </div>
      <div class="form-group">
        <label for="num2"
          >Enter second number:
          <input type="number" id="num2" name="num2" class="form-control" />
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </body>
</html>
